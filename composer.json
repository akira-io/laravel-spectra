{
    "name": "akira/laravel-spectra",
    "description": "Illuminate your API â€” interactive inspector for Laravel 12 with Inertia + React",
    "keywords": [
        "Akira",
        "laravel",
        "laravel-spectra",
        "api-inspector",
        "developer-tools",
        "inertia",
        "react"
    ],
    "homepage": "https://github.com/akira-io/laravel-spectra",
    "license": "MIT",
    "authors": [
        {
            "name": "Kidiatoliny",
            "email": "kidiatoliny@akira-io.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^12.0",
        "inertiajs/inertia-laravel": "^2.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "akira/laravel-debugger": "^1.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0.0",
        "driftingly/rector-laravel": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Akira\\Spectra\\": "src/",
            "Akira\\Spectra\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Akira\\Spectra\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "lint": "pint",
        "refactor": "rector",
        "test:lint": "pint --test",
        "test:refactor": "rector --dry-run",
        "test:arch": "pest --filter=arch",
        "test:types": "phpstan",
        "test:type-coverage": "pest --type-coverage --min=100 --compact",
        "test:coverage": "pest --parallel --coverage --compact --exactly=100",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:arch",
            "@test:coverage",
            "@test:type-coverage"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Akira\\Spectra\\SpectraServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
